<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Material3.Button.FilledTonalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/tonal_button_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="BotonAgregarProducto">
        <!-- Fondo con color verde y bordes redondeados -->
        <item name="android:backgroundTint">@color/azul2</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/ic_guardar</item>
    </style>

