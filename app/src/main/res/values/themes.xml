<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MiTiendita" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MiTiendita" parent="Base.Theme.MiTiendita" />

    <style name="Theme.MiTiendita.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MiTiendita.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MiTiendita.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="botonSecundario" parent="Widget.Material3.Button.TonalButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/purple</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Button.Rounded</item>
    </style>

    <!-- Agregar este nuevo estilo -->
    <style name="ShapeAppearanceOverlay.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="seccionTitulo">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

<!--    <style name="cardEstilo">-->
