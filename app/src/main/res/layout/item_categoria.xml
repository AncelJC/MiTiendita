<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/gris_claro"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:baselineAligned="false">

        <!-- Icono de categoría -->
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_category"
            android:contentDescription="@string/icono_categoria"
            android:layout_marginEnd="12dp"
            app:tint="@color/blue" />

        <!-- Nombre de la categoría -->
        <TextView
            android:id="@+id/tvNombreCategoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre de Categoría"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarCategoria"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:paddingHorizontal="8dp"
                android:text="@string/editar"
                app:icon="@drawable/ic_edit"
                app:iconTint="?attr/colorPrimary"
                android:textColor="?attr/colorPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminarCategoria"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:paddingHorizontal="8dp"
                android:text="@string/eliminar"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/error_color"
                android:textColor="@color/error_color" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
